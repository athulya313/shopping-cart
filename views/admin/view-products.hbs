<section>
    <div class="container">
        <div class="row mt-4">



  <a href="/admin/add-products" class="btn btn-success ml-auto mb-5">Add Products</a>
            
   </div>

            
        <table class="table mt-5" id="productsTable">
  <thead>
 <tr>
        
      <th scope="col">NO</th>
      <th scope="col">Title</Title></th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th>Image</th>
      <th>Options</th>
    </tr>
  
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">{{@index}}</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td>{{this.Price}}</td>
      <td><img style="width: 50px;height: 50px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
    <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
    <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Do you want to delete {{this.Name}} ?')">Delete</a>
    </td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>
<script>
  $(function (){
    $('#productsTable').DataTable();
  });
</script>